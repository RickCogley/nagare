{
  "name": "@rick/nagare",
  "version": "0.2.3",
  "description": "Deno Release Management Library",
  "author": "Rick Cogley",
  "license": "MIT",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --watch examples/test.ts",
    "test": "deno test --allow-read --allow-write --allow-run",
    "test:watch": "deno test --allow-read --allow-write --allow-run --watch",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",

    "release": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts",
    "release:patch": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts patch",
    "release:minor": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts minor",
    "release:major": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts major",
    "release:dry": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts --dry-run",
    "rollback": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts rollback",

    "docs": "deno doc --html --name=Nagare --output=./docs ./mod.ts"
  },

  "imports": {
    "@std/semver": "jsr:@std/semver@1"
  },

  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  }
}
