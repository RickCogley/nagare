{
  "name": "@rick/nagare",
  "version": "0.3.0",
  "description": "Nagare (流れ) is a comprehensive release management library for Deno with conventional commits and semantic versioning support",
  "author": "Rick Cogley <rick.cogley@esolia.co.jp>",
  "license": "MIT",
  "homepage": "https://jsr.io/@rick/nagare",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RickCogley/nagare.git"
  },
  "keywords": [
    "release-management",
    "versioning",
    "semver",
    "conventional-commits",
    "changelog",
    "git",
    "deno",
    "typescript",
    "automation",
    "ci-cd",
    "github-releases",
    "keep-a-changelog",
    "nagare",
    "流れ",
    "リリース管理"
  ],
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts",
    "./types": "./types.ts",
    "./config": "./config.ts"
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --watch examples/test.ts",
    "test": "deno test --allow-read --allow-write --allow-run",
    "test:watch": "deno test --allow-read --allow-write --allow-run --watch",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "build": "deno task check && deno task test && deno task lint && deno task fmt --check",

    "release": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts",
    "release:patch": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts patch",
    "release:minor": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts minor",
    "release:major": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts major",
    "release:dry": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts --dry-run",
    "rollback": "deno run --allow-read --allow-write --allow-run --allow-net cli.ts rollback",

    "docs": "deno doc --html --name=Nagare --output=./docs ./mod.ts",
    "docs:serve": "deno run --allow-net --allow-read jsr:@std/http/file-server --host 0.0.0.0 --port 8080 ./docs"
  },

  "imports": {
    "@std/semver": "jsr:@std/semver@^1.0.0"
  },

  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["docs/", "coverage/"]
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "exclude": ["docs/", "coverage/"]
  },

  "test": {
    "include": ["**/*_test.ts", "**/*.test.ts"],
    "exclude": ["docs/", "coverage/"]
  },

  "publish": {
    "include": [
      "mod.ts",
      "cli.ts",
      "types.ts",
      "config.ts",
      "src/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "exclude": [
      "**/*_test.ts",
      "**/*.test.ts",
      "examples/",
      "docs/",
      "coverage/",
      ".github/",
      "deno.lock",
      "nagare.config.ts"
    ]
  }
}
