{
  "name": "@rick/nagare",
  "version": "2.18.0",
  "description": "Nagare (流れ) is a comprehensive release management library for Deno with conventional commits and semantic versioning support",
  "author": "Rick Cogley <rick.cogley@esolia.co.jp>",
  "license": "MIT",
  "homepage": "https://jsr.io/@rick/nagare",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RickCogley/nagare.git"
  },
  "keywords": [
    "release-management",
    "versioning",
    "semver",
    "conventional-commits",
    "changelog",
    "git",
    "deno",
    "typescript",
    "automation",
    "ci-cd",
    "github-releases",
    "keep-a-changelog",
    "nagare",
    "流れ",
    "リリース管理"
  ],
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts",
    "./types": "./types.ts",
    "./config": "./config.ts",
    "./version": "./version.ts"
  },
  "tasks": {
    "dev": "deno run --unstable-raw-imports --allow-read --allow-write --allow-run --watch examples/test.ts",
    "test": "deno test --unstable-raw-imports --allow-read --allow-write --allow-run --allow-env --no-check",
    "test:watch": "deno test --unstable-raw-imports --allow-read --allow-write --allow-run --allow-env --watch --no-check",
    "test:coverage": "deno test --unstable-raw-imports --allow-read --allow-write --allow-run --allow-env --coverage --no-check",
    "test:strict": "deno test --unstable-raw-imports --allow-read --allow-write --allow-run --allow-env",
    "lint": "deno lint",
    "lint:prod": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check --unstable-raw-imports **/*.ts",
    "check:prod": "deno check --unstable-raw-imports cli.ts mod.ts",
    "build": "deno task check:prod && deno task test && deno task lint:prod && deno task fmt --check",

    "preflight": "deno task fmt && deno task check:prod && deno task lint:prod && deno task test && deno task security:check && deno task type:coverage",
    "preflight:strict": "deno task fmt && deno task check && deno task lint && deno task test:strict && deno task security:check && deno task type:coverage",
    "ci:test": "deno test --unstable-raw-imports --allow-all --coverage=coverage --junit-path=test-results.xml",
    "security:check": "deno task security:check-sarif && deno task security:check-patterns && deno run --allow-read scripts/check-owasp.ts",
    "type:coverage": "deno run --allow-read --allow-write scripts/type-coverage.ts",
    "type:strict": "deno check --unstable-raw-imports --config tsconfig.strict.json **/*.ts",
    "benchmark": "deno run --allow-all benchmarks/performance.ts",
    "benchmark:watch": "deno run --allow-all --watch benchmarks/performance.ts",
    "quality:check": "deno task preflight && deno task benchmark",
    "hooks:install": "git config core.hooksPath .githooks && echo '✅ Git hooks installed'",
    "hooks:test": "for hook in .githooks/hooks.d/*; do echo \"Testing $(basename $hook)...\"; $hook || true; done",

    "nagare": "deno run --unstable-raw-imports -A nagare-launcher.ts",
    "nagare:patch": "deno task nagare patch",
    "nagare:minor": "deno task nagare minor",
    "nagare:major": "deno task nagare major",
    "nagare:dry": "deno task nagare --dry-run",
    "nagare:rollback": "deno task nagare rollback",

    "docs": "deno doc --html --name=\"Nagare (流れ) - Deno Release Management Library\" --output=./docs/api ./mod.ts",
    "docs:api": "deno run --allow-run --allow-read scripts/generate-docs.ts api",
    "docs:api:direct": "deno doc --html --name=\"Nagare API\" --output=./docs/api ./cli.ts",
    "docs:json": "deno doc --json --output=./docs/api/nagare.json ./mod.ts",
    "docs:check": "deno doc --lint ./mod.ts ./cli.ts",
    "docs:enhance": "deno run --allow-read --allow-write scripts/enhance-docs.ts",
    "docs:fix-urls": "deno run --allow-read --allow-write scripts/fix-docs-urls.ts",
    "docs:build": "deno task docs && deno task docs:enhance && deno task docs:fix-urls",
    "docs:serve": "deno run --allow-net --allow-read jsr:@std/http/file-server --host 0.0.0.0 --port 8080 ./docs/api",
    "docs:clean": "git clean -fdx docs/api/",

    "security:check-sarif": "deno run --allow-read scripts/check-sarif.ts",
    "security:check-patterns": "deno run --allow-read scripts/check-patterns.ts",

    "i18n:types": "deno run --allow-read --allow-write scripts/generate-i18n-types.ts",

    "fmt:check": "deno fmt --check",
    "fmt:md": "markdownlint-cli2 --fix \"**/*.md\"",
    "lint:markdown": "markdownlint-cli2 --fix \"**/*.md\""
  },

  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.14",
    "@std/cli": "jsr:@std/cli@1.0.21",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/http/file-server": "jsr:@std/http@^1.0.0/file-server",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@std/semver": "jsr:@std/semver@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.9",
    "vento": "jsr:@vento/vento@^1.14.0"
  },

  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },

  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "eqeqeq",
        "no-await-in-loop",
        "camelcase",
        "default-param-last",
        "no-eval"
      ],
      "exclude": ["no-inferrable-types"]
    },
    "exclude": [
      "docs/",
      "coverage/",
      ".claude/",
      "scratch/",
      ".githooks/",
      "**/*_test.ts",
      "**/*.test.ts",
      "tests/"
    ]
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always",
    "singleBodyPosition": "maintain",
    "typeLiteral.separatorKind": "semiColon",
    "exclude": [
      "docs/",
      "coverage/",
      ".claude/",
      "scratch/",
      ".githooks/"
    ]
  },

  "test": {
    "include": ["**/*_test.ts", "**/*.test.ts"],
    "exclude": ["docs/", "coverage/"]
  },

  "publish": {
    "include": [
      "mod.ts",
      "cli.ts",
      "version.ts",
      "types.ts",
      "config.ts",
      "src/",
      "locales/",
      "templates/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "exclude": [
      "**/*_test.ts",
      "**/*.test.ts",
      "examples/",
      "docs/",
      "coverage/",
      ".github/",
      "deno.lock",
      "nagare.config.ts",
      "nagare-launcher.ts"
    ]
  },

  "exclude": [
    ".claude/",
    "scratch/",
    "coverage/",
    ".githooks/",
    "docs/api/",
    ".nagare-backups/"
  ]
}
